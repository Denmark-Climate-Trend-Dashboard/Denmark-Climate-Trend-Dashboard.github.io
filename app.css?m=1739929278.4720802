body {
    margin: 0;
    padding: 0;
    max-width: 100vw;
    width: 100vw;
    max-height: 100vh;
    height: 100vh;
    overflow: hidden;
}

.main {
    overflow-x: hidden;
    width: 100vw;
    height: 100vh;
    margin: 0; /* Remove unnecessary margins */
    padding: 0; /* Remove unnecessary padding */
    box-sizing: border-box; /* Ensure all elements respect the container width */
    font-family: "Segoe UI", sans-serif;
    display: grid;
    grid-template-rows: auto minmax(0, 1fr) auto minmax(0, 1.5fr);
    grid-template-columns: 40% 60%;
    box-sizing: border-box;
}

.headerWrapper {
    height: 50px;
    grid-column: 1 / span 2;
    display: flex;
    flex-direction: row;
    background-color: rgba(220, 220, 220, 0.5);
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
}

.headerWrapper > a {
    text-decoration: none;
    cursor: pointer;
    transition: all 0.1s ease; /* Smooth transition for hover effect */
}

.headerWrapper > a:hover {
    transform: scale(1.05);
}

.mapWrapper {
    width: 100%;
    height: 100%;
    grid-column: 1;
    grid-row: 3 / span 4;
}

.menuWrapper {
    width: 100%;
    height: 100%;
    grid-column: 1;
    grid-row: 2;
}

.lineChartWrapper {
    width: 100%;
    height: 100%;
    grid-column: 2;
    grid-row: 2;
}

.timeSlideWrapper {
    width: 100%;
    grid-column: 2;
    grid-row: 3;
}

.barChartWrapper {
    width: 100%;
    height: 100%;
    grid-column: 2;
    grid-row: 4;
}

#info-button {
    background-color: rgba(214, 234, 248, 1); /* Light blue background */
    border: 2px solid rgba(174, 214, 241, 1); /* Slightly darker blue border */
    border-radius: 18px; /* Rounded corners */
    display: flex; /* Flexbox for alignment */
    align-items: center; /* Center content vertically */
    /* justify-content: left; */ /* Center content horizontally (commented out in original) */
    gap: 14px; /* Space between symbol and text */
    cursor: pointer;
    transition: all 0.1s ease; /* Smooth transition for hover effect */
    padding: 10px; /* Add padding for better spacing */
    font-family: inherit;
}

#info-button:hover {
    transform: scale(1.05);
}